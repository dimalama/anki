[Unit]
Description=Anki Deck Generator Backend API
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
Group=YOUR_USERNAME
WorkingDirectory=/home/YOUR_USERNAME/Projects/anki/backend
Environment="PATH=/home/YOUR_USERNAME/Projects/anki/backend/.venv/bin"
ExecStart=/home/YOUR_USERNAME/Projects/anki/backend/.venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8002
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=anki-backend

[Install]
WantedBy=multi-user.target
